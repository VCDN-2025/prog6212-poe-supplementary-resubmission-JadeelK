@model CMCS.Models.Lecturer

@{
    ViewData["Title"] = "Create Lecturer";
}

<h1>Create Lecturer</h1>

<form asp-action="CreateUser">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContractId"></label>
        <select asp-for="ContractId" class="form-control" asp-items="@(new SelectList(ViewBag.Contracts, "ContractId", "ContractName"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>